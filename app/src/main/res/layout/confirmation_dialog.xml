<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="@dimen/size_250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_register_dialog"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:layout_width="@dimen/size_90dp"
            android:layout_height="@dimen/size_90dp"
            android:layout_margin="@dimen/size_10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_register_dialog_icon"
            android:src="@drawable/ic_check" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_30dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/bevietnam_regular"
            android:text="@string/confirmation_page_text3"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14sp"
            android:paddingLeft="@dimen/size_5dp"
            android:paddingRight="@dimen/size_5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginBottom="@dimen/size_30dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/bevietnam_regular"
            android:text="@string/confirmation_page_text4"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14sp"
            android:paddingLeft="@dimen/size_5dp"
            android:paddingRight="@dimen/size_5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/white"
            >

        </LinearLayout>

        <Button
            android:id="@+id/close_payment_confirmation_dialog"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50dp"
            android:paddingTop="@dimen/size_10dp"
            android:text="Berkitish"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18sp"
            android:fontFamily="@font/bevietnam_bold"
            android:background="@color/orange"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>